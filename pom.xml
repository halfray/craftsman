<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.bigbata.craftsman</groupId>
    <artifactId>craftsman</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>craftsman</name>
    <url>http://maven.apache.org</url>

    <developers>
        <developer>
            <name>Liuyansong</name>
            <id>Liuyansong</id>
            <email>yansong.lau@gmail.com</email>
            <roles>
                <role>Architect</role>
                <role>Java Developer</role>
            </roles>
            <timezone>+8</timezone>
        </developer>
    </developers>

    <build>
        <finalName>craftsman</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.2</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <modules>
        <module>craftsman-support</module>
        <module>craftsman-platform</module>
        <module>craftsman-webapp</module>
    </modules>

    <repositories>
        <repository>
            <id>bigbata.public</id>
            <name>Public</name>
            <url>http://42.96.175.44:8081/nexus/content/groups/public</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>bigbata.public</id>
            <name>Public</name>
            <url>http://42.96.175.44:8081/nexus/content/groups/public</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <distributionManagement>
        <repository>
            <id>bigbata.releases</id>
            <name>Releases</name>
            <url>http://42.96.175.44:8081/nexus/content/repositories/releases</url>
        </repository>
        <snapshotRepository>
            <id>bigbata.snapshots</id>
            <name>Snapshots</name>
            <url>http://42.96.175.44:8081/nexus/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

</project>
